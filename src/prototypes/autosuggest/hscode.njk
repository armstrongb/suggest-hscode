---
group: Autosuggest
title: Suggest HSCode matches
layout: autosuggest/views/_master
prevPage: index
nextPage: uk-location
---
{% from "components/question/_macro.njk" import onsQuestion %}
{% from "components/button/_macro.njk" import onsButton %}
{% from "components/autosuggest/_macro.njk" import onsAutosuggest %}

{% block main %}
    {% call onsQuestion({
    "title": "What is your product or service?",
    "legendIsQuestionTitle": true,
    "classes": "ons-u-mt-no",
    "justification": {
            "title": "Why we ask this question",
            "content": "<p>We will use this information to provide you with customised content relevant to your sector and products or services.</p>"
        }
}) %}
    {# https://ons-design-system.netlify.app/components/autosuggest/ docs #}
    {{
        onsAutosuggest ({
            "id" : "hscode-test",
            "label": {
                "text": "Type your product or service here",
                "description": "Select from suggestions or enter your own answer",
                "id": "hscode-test-label"
            },
            "classes": "ons-input--w-30",
            "moreResults": "Continue entering to improve suggestions",
            "resultsTitle": "Suggestions",
            "resultsTitleId": "hscode-suggestions",
            "autosuggestData": "/data/hscode.json",
            "allowMultiple" : false,
            "instructions": "Use up and down keys to navigate suggestions once you\'ve typed more than two characters. Use the enter key to select a suggestion. Touch device users, explore by touch or with swipe gestures.",
            "minChars" : "3",
            "autocomplete" : "off",
            "noResults": "No suggestions found. You can enter your own answer",
            "typeMore": "Continue entering to get suggestions"
        })

    }}
    {{
        onsButton({
            "text": "Next question",
            "classes": "ons-u-mt-m",
            "url": pageInfo.rootPath +'/'+ pageInfo.nextPage +'.html'
        })
    }}
    {% endcall %}
{% endblock %}
